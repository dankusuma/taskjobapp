@using System.Web.Optimization
@using WebHelpers.Mvc5.Enum
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    @Styles.Render("~/Bundles/css")
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a><b>Job Task Apps</b></a>
        </div>

        <div class="register-box-body">
            <p class="login-box-msg">Daftar Baru</p>

            <form action="@Url.Action("DoRegister", "Register")" method="post">
                <div class="form-group has-feedback">
                    <input required="required" name="user_upline" type="text" class="form-control" placeholder="ID Upline">
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input required="required" name="user_id" type="text" class="form-control" placeholder="ID Pengguna">
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input required="required" name="user_name" class="form-control" placeholder="Nama Lengkap">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input required="required" name="user_password" type="password" class="form-control" placeholder="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input required="required" name="user_password_confirm" type="password" class="form-control" placeholder="Konfirmasi password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">

                    </div>
                    <!-- /.col -->
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Daftar</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <div class="social-auth-links text-center">
   
            </div>

            <a href="/login" class="text-center">Sudah Punya Akun</a>
        </div>
        <!-- /.form-box -->
    </div>
    <script src="@RouteJs.RouteJsHandler.HandlerUrl"></script>
    <script src="@EnumHandler.HandlerUrl"></script>
    @Scripts.Render("~/Bundles/js")
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
</body>
</html>
